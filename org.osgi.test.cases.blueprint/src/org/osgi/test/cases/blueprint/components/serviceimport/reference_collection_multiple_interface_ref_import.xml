<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <description>
        This is similar to the sorting tests, but uses the same code to test reference collections
        using multiple interfaces.
    </description>

    <bean id="NameComparator" class="org.osgi.test.cases.blueprint.components.serviceimport.NameComparator"/>

    <!-- This gets both a ServiceManager and a reference collection injected -->
   <bean id="ComparatorChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ReferenceCollectionSortChecker" init-method="init">
       <argument value="ComparatorChecker"/>
       <property name="serviceManager">
           <reference interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
       </property>
       <property name="bundleContext" ref="bundleContext"/>
       <property name="useReferences" value="true"/>
       <property name="set">
           <ref-set comparator-ref="NameComparator" member-type="service-reference">
               <interfaces>
                   <value>org.osgi.test.cases.blueprint.services.TestServiceOne</value>
                   <value>org.osgi.test.cases.blueprint.services.TestServiceTwo</value>
               </interfaces>
           </ref-set>
       </property>
       <property name="list">
           <ref-list member-type="service-reference">
               <comparator>
                   <ref component="NamedComponent"/>
               </comparator>
               <interfaces>
                   <value>org.osgi.test.cases.blueprint.services.TestServiceOne</value>
                   <value>org.osgi.test.cases.blueprint.services.TestServiceTwo</value>
               </interfaces>
           </ref-list>
       </property>
       <property name="sortOrder">
           <list>
               <value>ServiceOneA</value>
               <value>ServiceOneB</value>
               <value>ServiceOneC</value>
               <value>ServiceOneD</value>
               <value>ServiceOneE</value>
           </list>
       </property>
   </bean>
</blueprint>


