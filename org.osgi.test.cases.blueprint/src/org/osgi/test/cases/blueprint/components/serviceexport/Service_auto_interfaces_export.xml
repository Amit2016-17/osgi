<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This uses auto-export to export all of the classes.
    </description>

    <!-- the node this service export maps into. -->
   <bean id="ServiceInterfaces" class="org.osgi.test.cases.blueprint.services.TestGoodServiceSubclass"
        init-method="init" destroy-method="destroy">
       <argument value="ServiceInterfaces"/>
   </bean>

   <!-- export all of the interfaces -->
   <service id="ServiceInterfacesService" ref="ServiceInterfaces" auto-export="interfaces"/>
</blueprint>

