<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <description>
        This is a reusable config for validating auto-export of interfaces.
    </description>

   <bean id="ServiceInterfaces" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceInterfaces"/>
       <property name="one">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceOne"/>
       </property>
       <property name="two">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceTwo"/>
       </property>
       <property name="allSubclass">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceAllSubclass"/>
       </property>
   </bean>
</blueprint>
