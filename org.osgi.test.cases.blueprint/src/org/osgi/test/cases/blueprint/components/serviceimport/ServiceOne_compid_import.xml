<?xml version="1.0" encoding="UTF-8"?> 
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
    
    <description>
        This is a reusable config for validating different service registrations. 
    </description>
      
    <!-- we import this both as a property and constructor arg --> 
   <component id="ServiceOneConstructor" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker"> 
       <constructor-arg value="ServiceOneConstructor"/>
       <constructor-arg type="org.osgi.test.cases.blueprint.services.TestServiceOne">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceOne" component-name="ServiceOne"/>
       </constructor-arg>    
   </component> 
   
   <component id="ServiceOneProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker"> 
       <constructor-arg value="ServiceOneProperty"/>
       <property name="one">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceOne" component-name="ServiceOne"/>
       </property>    
   </component> 
</components> 

