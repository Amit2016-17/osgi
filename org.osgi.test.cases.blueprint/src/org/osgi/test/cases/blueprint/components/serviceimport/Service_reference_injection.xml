<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <description>
        This is a test for ServiceReference injection, as well as a test for the bundle and bundleContext
        reference ids.
    </description>

    <!-- single shared instance of the imported service -->
    <reference id="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne"/>

   <!-- We pull in the bundle, the bundle context, as well as the service reference -->
   <bean id="ServiceReferenceChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceInjection">
       <argument value="ServiceReferenceChecker"/>
       <argument ref="bundleContext"/>
       <argument ref="bundle"/>
       <property name="reference" ref="ServiceOne"/>
   </bean>
</blueprint>

