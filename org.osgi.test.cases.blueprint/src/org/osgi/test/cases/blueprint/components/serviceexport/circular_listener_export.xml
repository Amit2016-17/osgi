<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This is just a simple exported service using a single interface.
    </description>

   <!-- This is both the service we export AND the listner for the service registrations -->
   <component id="ServiceOneListener" class="org.osgi.test.cases.blueprint.serviceexport.CircularRegistrationListener">
       <constructor-arg value="ServiceOneListener"/>
   </component>

   <!-- simple export using a reference and just one interface. -->
   <service id="ServiceOneService" ref="ServiceOneListener" interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
       <registration-listener ref="ServiceOneListener"
           registration-method="register"
           unregistration-method="unregister"/>
       <service-properties>
           <entry key="service.component.name" value="ServiceOneService" />
       </service-properties>
   </service>
</components>

