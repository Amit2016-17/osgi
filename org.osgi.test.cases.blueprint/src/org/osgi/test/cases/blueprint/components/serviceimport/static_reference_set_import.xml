<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This is a checker for basic reference list validation.
    </description>

    <component id="ServiceOneListener" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceOneListener">
        <constructor-arg value="ServiceOneListener"/>
    </component>


    <!-- NB:  this also tests the ability for a collection to be a top-level component -->
    <ref-set id="TestCollection" interface="org.osgi.test.cases.blueprint.services.TestServiceOne" availability="optional" member-type="service-instance">
        <listener bind-method="bind" unbind-method="unbind" ref="ServiceOneListener"/>
    </ref-set>

    <!-- This gets both a ServiceManager and a reference collection injected -->
   <component id="ReferenceChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.StaticReferenceSet" init-method="init">
       <constructor-arg value="ReferenceChecker"/>
       <property name="serviceManager">
           <service interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
       </property>
       <property name="set" ref="TestCollection" />
   </component>
</components>

