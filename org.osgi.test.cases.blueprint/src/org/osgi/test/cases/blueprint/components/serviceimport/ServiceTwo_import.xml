<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This is a reusable config for validating different service registrations.
    </description>

    <!-- we import this both as a property and constructor arg -->
   <bean id="ServiceTwoConstructor" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceTwoConstructor"/>
       <argument type="org.osgi.test.cases.blueprint.services.TestServiceTwo">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceTwo"/>
       </argument>
   </bean>

   <bean id="ServiceTwoProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceTwoProperty"/>
       <property name="two">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceTwo"/>
       </property>
   </bean>
</blueprint>

