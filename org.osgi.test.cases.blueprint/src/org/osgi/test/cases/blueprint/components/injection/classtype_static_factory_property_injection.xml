<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

<!-- URL: 3 cases -->
	<bean id="compURL" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="url" value="http://www.osgi.org"/>
	</bean>

    <bean id="compURLNull" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="url"><null/></property>
	</bean>

	<bean id="compURL_EleValue" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="url"><value>http://www.osgi.org</value></property>
	</bean>

<!-- Locale:5 cases -->
	<bean id="compLocale" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="locale" value="en"/>
	</bean>

	<bean id="compLocale2" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="locale" value="zh_CN"/>
	</bean>

	<bean id="compLocale3" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="locale" value="en_US_WIN"/>
	</bean>

    <bean id="compLocaleNull" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="locale"><null/></property>
	</bean>

	<bean id="compLocale_EleValue" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="locale"><value>en_US</value></property>
	</bean>

<!-- Class:3 cases -->
	<bean id="compClass" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="classProp" value="java.lang.String"/>
	</bean>

    <bean id="compClassNull" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="classProp"><null/></property>
	</bean>

	<bean id="compClass_EleValue" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="classProp"><value>org.osgi.test.cases.blueprint.components.injection.PropertyInjection</value></property>
	</bean>

<!-- Properties: 4 cases -->
	<bean id="compProperties" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="properties" value="Name=Rex"/>
	</bean>

	<bean id="compProperties_EleValue" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="properties">
			<value>
				Name= Rex
				Organization =OSGi Alliance
				Nationality    :    China
				Language: \u4e2d\u6587, English
				Graduated=Shanghai Jiao Tong University
				#key is the word before the first whitespace - "Major"
				Major Computer Science

				!Gender should be a String ""
				Gender

			</value>
		</property>
	</bean>

	<bean id="compPropertiesEmpty" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="properties"><value>  </value></property>
	</bean>

    <bean id="compPropertiesNull" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionStaticFactory">
		<property name="properties"><null/></property>
	</bean>


</blueprint>

