<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This imports a service reference with a multiple attached listeners
    </description>

    <bean id="ServiceOneListener" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceListener">
        <argument value="ServiceOneListener"/>
    </bean>

    <!-- single shared instance of the imported service -->
    <reference id="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
        <reference-listener bind-method="bindReference" unbind-method="unbindReference">
            <ref component-id="ServiceOneListener"/>
        </reference-listener>
    </reference>

   <bean id="ServiceOneProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceOneProperty"/>
       <property name="one" ref="ServiceOne"/>
   </bean>
</blueprint>

