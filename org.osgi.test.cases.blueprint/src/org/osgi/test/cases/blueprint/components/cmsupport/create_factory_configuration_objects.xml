<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:bpcm="http://www.osgi.org/xmlns/blueprint-cm/v1.0.0">

    <description>
        This use to build configuration object
    </description>

    <!-- reference configuration admin service  -->
    <reference id="adminService" interface="org.osgi.service.cm.ConfigurationAdmin"/>


    <bean id="compConfigurationManager" class="org.osgi.test.cases.blueprint.services.ConfigurationManager" destroy-method="removeAllConfigs">
        <argument ref="adminService"/>
        <constructor-arg>
            <list>
                <!-- config factory 1 -->
                <bean class="org.osgi.test.cases.blueprint.services.ManagedConfigurationFactory">
                    <argument value="org.osgi.test.cases.blueprint.components.cmsupport.configfactory1"/>
                    <constructor-arg>
                        <list>
                            <!-- for the 1st factory configration object -->
                            <bean class="org.osgi.test.cases.blueprint.components.cmsupport.ConfigurationDictionaryBuilder">
                                <constructor-arg>
                                    <map>
                                        <entry key="string">
                                            <value type="java.lang.String">abc</value>
                                        </entry>
                                        <entry key="boolean">
                                            <value type="java.lang.Boolean">true</value>
                                        </entry>
                                    </map>
                                </argument>
                            </bean>
                            <!-- for the 2nd factory configration object -->
                            <bean class="org.osgi.test.cases.blueprint.components.cmsupport.ConfigurationDictionaryBuilder">
                                <constructor-arg>
                                    <map>
                                        <entry key="string">
                                            <value type="java.lang.String">bcd</value>
                                        </entry>
                                        <entry key="boolean">
                                            <value type="java.lang.Boolean">false</value>
                                        </entry>
                                    </map>
                                </argument>
                            </bean>
                        </list>
                    </argument>
                </bean>

             </list>
        </argument>
    </bean>

    <service id="srvConfigurationManager" ref="compConfigurationManager" interface="org.osgi.test.cases.blueprint.services.ConfigurationManager"/>

</blueprint>
