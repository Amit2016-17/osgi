<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This is a test for ServiceReference injection with optional availability.  This should inject a null
        value for the reference.
    </description>

    <!-- single shared instance of the imported service -->
    <reference id="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne" availability="optional"/>

   <!-- We pull in the bundle, the bundle context, as well as the service reference -->
   <bean id="ServiceReferenceChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.NullServiceReferenceInjection">
       <argument value="ServiceReferenceChecker"/>
       <argument ref="bundleContext"/>
       <argument ref="bundle"/>
       <property name="reference" ref="ServiceOne"/>
   </bean>
</blueprint>

