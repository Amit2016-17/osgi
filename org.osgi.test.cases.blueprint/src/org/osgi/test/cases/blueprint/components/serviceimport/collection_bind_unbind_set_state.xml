<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This is a checker for the state of the service reference in the collection during bind/unbind calls.
    </description>

    <!-- This gets both a ServiceManager and a reference collection injected -->
   <component id="BindUnbindSetChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.BindUnbindSetChecker" init-method="init">
       <constructor-arg value="BindUnbindSetChecker"/>
       <property name="serviceManager">
           <reference interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
       </property>
       <property name="set">
           <ref-set interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
               <listener bind-method="bind" unbind-method="unbind" ref="BindUnbindSetChecker"/>
           </ref-set>
       </property>
   </component>
</components>

