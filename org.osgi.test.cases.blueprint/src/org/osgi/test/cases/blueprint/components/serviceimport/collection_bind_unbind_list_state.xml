<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This is a checker for the state of the service reference in the collection during bind/unbind calls.
    </description>

   <!-- This gets both a ServiceManager and a reference collection injected -->
  <bean id="BindUnbindListChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.BindUnbindListChecker" init-method="init">
      <argument value="BindUnbindListChecker"/>
      <property name="serviceManager">
          <reference interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
      </property>
      <property name="list">
          <reference-list interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
              <reference-listener bind-method="bind" unbind-method="unbind" ref="BindUnbindListChecker"/>
          </reference-list>
      </property>
  </bean>
</blueprint>

