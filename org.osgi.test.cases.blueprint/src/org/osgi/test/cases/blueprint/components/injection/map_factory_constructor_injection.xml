<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <bean id="compFactory" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionInstanceFactory">
      <!-- collaborators and configuration for this component go here -->
    </bean>

    <bean id="compEmptyMap" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map></map>
        </argument>
    </bean>

    <bean id="compNullMap" factory-method="makeInstance" factory-component="compFactory">
        <argument type="java.util.Map">
            <null/>
        </argument>
    </bean>

    <bean id="compStringItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map>
                <entry key="abc" value="1"/>
                <entry key="def" value="2"/>
            </map>
        </argument>
    </bean>

    <bean id="compDupItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map>
                <entry key="abc" value="1"/>
                <entry key="abc" value="2"/>
            </map>
        </argument>
    </bean>

    <bean id="compBooleanItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map>
                <entry key="true">
                    <value type="java.lang.Boolean">true</value>
                </entry>
                <entry key="false">
                    <value type="java.lang.Boolean">false</value>
                </entry>
            </map>
        </argument>
    </bean>

    <bean id="compBooleanKeys" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map>
                <entry>
                    <key><value type="java.lang.Boolean">true</value></key>
                    <value>true</value>
                </entry>
                <entry>
                    <key><value type="java.lang.Boolean">false</value></key>
                    <value>false</value>
                </entry>
            </map>
        </argument>
    </bean>

    <bean id="compTypedItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map value-type="java.lang.Boolean">
                <entry key="true" value="true">
                </entry>
                <entry key="false">
                    <value>false</value>
                </entry>
                <entry key="double">
                    <value type="java.lang.Double">1.0</value>
                </entry>
            </map>
        </argument>
    </bean>

    <bean id="compTypedKeys" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map key-type="java.lang.Boolean">
                <entry key="true" value="true"/>
                <entry value="false">
                    <key><value>false</value></key>
                </entry>
                <entry>
                    <key><value type="java.lang.Double">1.0</value></key>
                    <value>double</value>
                </entry>
            </map>
        </argument>
    </bean>

    <bean id="compMixedItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map>
                <entry key="String">
                    <value type="java.lang.String">abc</value>
                </entry>
                <entry key="Boolean">
                    <value type="java.lang.Boolean">false</value>
                </entry>
                <entry key="Byte">
                    <value type="java.lang.Byte">3</value>
                </entry>
                <entry key="Character">
                    <value type="java.lang.Character">4</value>
                </entry>
                <entry key="Integer">
                    <value type="java.lang.Integer">5</value>
                </entry>
                <entry key="Short">
                    <value type="java.lang.Short">6</value>
                </entry>
                <entry key="Long">
                    <value type="java.lang.Long">7</value>
                </entry>
                <entry key="Double">
                    <value type="java.lang.Double">8.0</value>
                </entry>
                <entry key="Float">
                    <value type="java.lang.Float">9.0</value>
                </entry>
                <entry key="URL">
                    <value type="java.net.URL">http://www.osgi.org</value>
                </entry>
                <entry key="Class">
                    <value type="java.lang.Class">java.lang.String</value>
                </entry>
                <entry key="Locale">
                    <value type="java.util.Locale">en_US</value>
                </entry>
                <entry key="null">
                    <null/>
                </entry>
            </map>
        </argument>
    </bean>

    <bean id="compNestedMap" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map>
                <entry>
                    <key><value>inner</value></key>
                    <map>
                        <entry key="abc" value="1"/>
                        <entry key="def" value="2"/>
                    </map>
                </entry>
            </map>
        </argument>
    </bean>

    <bean id="compNestedSet" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map>
                <entry>
                    <key><value>inner</value></key>
                    <set>
                        <value>abc</value>
                        <value>def</value>
                    </set>
                </entry>
            </map>
        </argument>
    </bean>

    <bean id="compNestedList" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map>
                <entry>
                    <key><value>inner</value></key>
                    <list>
                        <value>abc</value>
                        <value>def</value>
                    </list>
                </entry>
            </map>
        </argument>
    </bean>

    <bean id="compNestedProps" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <map>
                <entry>
                    <key><value>inner</value></key>
                    <props>
                        <prop key="abc">def</prop>
                        <prop key="ghi">jkl</prop>
                    </props>
                </entry>
            </map>
        </argument>
    </bean>
</blueprint>

