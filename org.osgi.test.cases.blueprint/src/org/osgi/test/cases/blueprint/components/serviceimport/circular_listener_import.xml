<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This imports a reference with an attached listener that also has the reference injected, thus
        creating a circular reference situation.
    </description>

    <component id="ServiceOneListener" class="org.osgi.test.cases.blueprint.components.serviceimport.CircularServiceOneListener">
        <constructor-arg value="ServiceOneListener"/>
        <property name="one" ref="ServiceOne"/>
    </component>


    <!-- single shared instance of the imported service -->
    <reference id="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
        <listener bind-method="bind" unbind-method="unbind" ref="ServiceOneListener"/>
    </reference>
</components>

