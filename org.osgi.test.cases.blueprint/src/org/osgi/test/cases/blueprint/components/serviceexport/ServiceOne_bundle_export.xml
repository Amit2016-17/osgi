<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This is just a simple exported service using a single interface, but bundle scope on the component.
    </description>

    <!-- the node this service export maps into. -->
   <bean id="ServiceOne" class="org.osgi.test.cases.blueprint.services.TestGoodServiceSubclass" scope="bundle"
        init-method="init" destroy-method="destroy">
       <argument value="ServiceOne"/>
   </bean>

   <!-- simple export using a reference and just one interface. The ranking override is the test-->
   <service id="GoodServiceService" ref="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne"/>
</blueprint>

