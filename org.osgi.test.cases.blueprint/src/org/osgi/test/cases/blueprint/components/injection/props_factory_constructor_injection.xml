<?xml version="1.0" encoding="UTF-8"?> 
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"> 

    <component id="compFactory" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionInstanceFactory">
      <!-- collaborators and configuration for this component go here -->
    </component>

    <component id="compEmptyProps" factory-method="makeInstance" factory-component="compFactory">
        <constructor-arg>
            <props></props>
        </constructor-arg>
    </component> 

    <component id="compNullProps" factory-method="makeInstance" factory-component="compFactory">
        <constructor-arg type="java.util.Properties">
            <null/>
        </constructor-arg>
    </component> 

    <component id="compStringItems" factory-method="makeInstance" factory-component="compFactory">
        <constructor-arg>
            <props>
                <prop key="administrator">administrator@example.org</prop>
				<prop key="support">support@example.org</prop>
				<prop key="development">development@example.org</prop>
            </props>
        </constructor-arg>
    </component> 

</components>