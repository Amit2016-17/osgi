<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

<!-- URL: 3 cases -->
	<bean id="compURL" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument value="http://www.osgi.org" type="java.net.URL"/>
	</bean>

    <bean id="compURLNull" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument type="java.net.URL"><null/></argument>
	</bean>

	<bean id="compURL_EleValue" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument><value type="java.net.URL">http://www.osgi.org</value></argument>
	</bean>

<!-- Locale:5 cases -->
	<bean id="compLocale" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument value="en" type="java.util.Locale"/>
	</bean>

	<bean id="compLocale2" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument value="zh_CN" type="java.util.Locale"/>
	</bean>

	<bean id="compLocale3" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument value="en_US_WIN" type="java.util.Locale"/>
	</bean>

    <bean id="compLocaleNull" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument type="java.util.Locale"><null/></argument>
	</bean>

	<bean id="compLocale_EleValue" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument><value type="java.util.Locale">en_US</value></argument>
	</bean>

<!-- Class:3 cases -->
	<bean id="compClass" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument value="java.lang.String" type="java.lang.Class"/>
	</bean>

    <bean id="compClassNull" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument type="java.lang.Class"><null/></argument>
	</bean>

	<bean id="compClass_EleValue" factory-method="makeInstance" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionStaticFactory">
		<argument><value type="java.lang.Class">org.osgi.test.cases.blueprint.components.injection.ConstructorInjection</value></argument>
	</bean>

<!-- Properties: 4 cases -->
	<bean id="compProperties" factory-method="makeStatic" class="org.osgi.test.cases.blueprint.components.injection.PropsConstructorInjection">
		<argument value="Name=Rex" type="java.util.Properties"/>
	</bean>

	<bean id="compProperties_EleValue" factory-method="makeStatic" class="org.osgi.test.cases.blueprint.components.injection.PropsConstructorInjection">
		<argument type="java.util.Properties">
			<value>
				Name= Rex
				Organization =OSGi Alliance
				Nationality    :    China
				Language: \u4e2d\u6587, English
				Graduated=Shanghai Jiao Tong University
				#key is the word before the first whitespace - "Major"
				Major Computer Science

				!Gender should be a String ""
				Gender

			</value>
		</argument>
	</bean>

	<bean id="compPropertiesEmpty" factory-method="makeStatic" class="org.osgi.test.cases.blueprint.components.injection.PropsConstructorInjection">
		<argument type="java.util.Properties"><value>  </value></argument>
	</bean>

    <bean id="compPropertiesNull" factory-method="makeStatic" class="org.osgi.test.cases.blueprint.components.injection.PropsConstructorInjection">
		<argument type="java.util.Properties"><null/></argument>
	</bean>

</blueprint>

