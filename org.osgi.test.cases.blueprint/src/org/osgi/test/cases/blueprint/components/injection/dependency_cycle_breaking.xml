<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    default-activation="eager">

    <description>
        Cycle-breaking example shown in section 121.2.6 of the blueprint spec.  In a partially
        constructed version of "c" will be used to create "b", and the c init-method is run
        last.
    </description>

   <bean id="a" class="org.osgi.test.cases.blueprint.components.injection.CircularComponentInjection">
       <argument value="a"/>
       <argument ref="b"/>
   </bean>
   <bean id="b" class="org.osgi.test.cases.blueprint.components.injection.CircularComponentInjection">
       <argument value="b"/>
       <argument ref="c"/>
   </bean>
   <bean id="c" class="org.osgi.test.cases.blueprint.components.injection.CircularComponentInjection" init-method="init">
       <argument value="c"/>
       <property name="componentOne" ref="a"/>
   </bean>
</blueprint>

