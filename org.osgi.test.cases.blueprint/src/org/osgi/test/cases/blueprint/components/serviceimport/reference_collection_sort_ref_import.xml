<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This is a checker for different sorting combinations.
    </description>

    <component id="NameComparator" class="org.osgi.test.cases.blueprint.components.serviceimport.NameComparator"/>

    <!-- This gets both a ServiceManager and a reference collection injected -->
    <component id="ComparatorChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ReferenceCollectionSortChecker" init-method="init">
        <constructor-arg value="ComparatorChecker"/>
        <property name="serviceManager">
            <service interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
        </property>
        <property name="bundleContext" ref="bundleContext"/>
        <property name="usesReferences" value="true"/>
        <property name="set">
            <ref-set interface="org.osgi.test.cases.blueprint.services.TestServiceOne" comparator-ref="NameComparator" member-type="service-reference"/>
        </property>
        <property name="list">
            <ref-list interface="org.osgi.test.cases.blueprint.services.TestServiceOne" ordering-basis="service" member-type="service-reference">
                <comparator>
                    <ref component="NameComparator"/>
                </comparator>
            </ref-list>
        </property>
        <property name="sortOrder">
            <list>
                <value>TestServiceA</value>
                <value>TestServiceB</value>
                <value>TestServiceC</value>
                <value>TestServiceD</value>
                <value>TestServiceE</value>
            </list>
        </property>
    </component>


    <!-- This is the same, but using an inverted comparison. -->
    <component id="InvertedComparatorChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ReferenceCollectionSortChecker" init-method="init">
        <constructor-arg value="InvertedComparatorChecker"/>
        <property name="serviceManager">
            <service interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
        </property>
        <property name="bundleContext" ref="bundleContext"/>
        <property name="usesReferences" value="true"/>
        <property name="set">
            <ref-set interface="org.osgi.test.cases.blueprint.services.TestServiceOne" member-type="service-reference">
                <comparator>
                    <component class="org.osgi.test.cases.blueprint.components.serviceimport.InvertedNameComparator"/>
                </comparator>
            </ref-set>
        </property>
        <property name="list">
            <ref-list interface="org.osgi.test.cases.blueprint.services.TestServiceOne" member-type="service-reference">
                <comparator>
                    <component class="org.osgi.test.cases.blueprint.components.serviceimport.InvertedNameComparator"/>
                </comparator>
            </ref-list>
        </property>
        <property name="sortOrder">
            <list>
                <value>TestServiceE</value>
                <value>TestServiceD</value>
                <value>TestServiceC</value>
                <value>TestServiceB</value>
                <value>TestServiceA</value>
            </list>
        </property>
    </component>

    <!-- This is the same, but using a comparator that sorts on ServiceReferences -->
    <component id="ServiceReferenceComparatorChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ReferenceCollectionSortChecker" init-method="init">
        <constructor-arg value="ServiceReferenceComparatorChecker"/>
        <property name="serviceManager">
            <service interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
        </property>
        <property name="bundleContext" ref="bundleContext"/>
        <property name="usesReferences" value="true"/>
        <property name="set">
            <ref-set interface="org.osgi.test.cases.blueprint.services.TestServiceOne" ordering-basis="service-reference" member-type="service-reference">
                <comparator>
                    <component class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceComparator"/>
                </comparator>
            </ref-set>
        </property>
        <property name="list">
            <ref-list interface="org.osgi.test.cases.blueprint.services.TestServiceOne" ordering-basis="service-reference" member-type="service-reference">
                <comparator>
                    <component class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceComparator"/>
                </comparator>
            </ref-list>
        </property>
        <property name="sortOrder">
            <list>
                <value>TestServiceA</value>
                <value>TestServiceB</value>
                <value>TestServiceC</value>
                <value>TestServiceD</value>
                <value>TestServiceF</value>
            </list>
        </property>
    </component>


    <!-- This is the same, but using the service compareTo() method. -->
    <component id="ServiceOrderChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ReferenceCollectionSortChecker" init-method="init">
        <constructor-arg value="ServiceOrderChecker"/>
        <property name="serviceManager">
            <service interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
        </property>
        <property name="bundleContext" ref="bundleContext"/>
        <property name="usesReferences" value="true"/>
        <property name="set">
            <ref-set interface="org.osgi.test.cases.blueprint.services.TestServiceOne" ordering-basis="service" member-type="service-reference"/>
        </property>
        <property name="list">
            <ref-list interface="org.osgi.test.cases.blueprint.services.TestServiceOne" ordering-basis="service" member-type="service-reference"/>
        </property>
        <property name="sortOrder">
            <list>
                <value>TestServiceB</value>
                <value>TestServiceC</value>
                <value>TestServiceA</value>
                <value>TestServiceE</value>
                <value>TestServiceD</value>
            </list>
        </property>
    </component>


    <!-- And now the natural sorting order using the Service Reference. -->
    <component id="ServiceReferenceOrderChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ReferenceCollectionSortChecker" init-method="init">
        <constructor-arg value="ServiceReferenceOrderChecker"/>
        <property name="serviceManager">
            <service interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
        </property>
        <property name="bundleContext" ref="bundleContext"/>
        <property name="usesReferences" value="true"/>
        <property name="set">
            <ref-set interface="org.osgi.test.cases.blueprint.services.TestServiceOne" ordering-basis="service-reference" member-type="service-reference"/>
        </property>
        <property name="list">
            <ref-list interface="org.osgi.test.cases.blueprint.services.TestServiceOne" ordering-basis="service-reference" member-type="service-reference"/>
        </property>
        <property name="sortOrder">
            <list>
                <value>TestServiceA</value>
                <value>TestServiceB</value>
                <value>TestServiceC</value>
                <value>TestServiceD</value>
                <value>TestServiceE</value>
            </list>
        </property>
    </component>
</components>

