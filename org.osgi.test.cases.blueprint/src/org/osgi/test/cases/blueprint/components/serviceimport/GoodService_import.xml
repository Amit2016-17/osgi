<?xml version="1.0" encoding="UTF-8"?> 
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
    
    <description>
        This is a reusable config for validating different service registrations. 
    </description>
      
    <!-- we import this both as a property and constructor arg --> 
   <component id="GoodServiceConstructor" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker"> 
       <constructor-arg value="GoodServiceConstructor"/>
       <constructor-arg type="org.osgi.test.cases.blueprint.services.TestGoodService">
           <reference interface="org.osgi.test.cases.blueprint.services.TestGoodService"/>
       </constructor-arg>    
   </component> 
   
   <component id="GoodServiceProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker"> 
       <constructor-arg value="GoodServiceProperty"/>
       <property name="good">
           <reference interface="org.osgi.test.cases.blueprint.services.TestGoodService"/>
       </property>    
   </component> 
</components> 

