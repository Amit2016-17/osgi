<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This is a reusable config for validating different service registrations.
    </description>

    <!-- we import this both as a property and constructor arg -->
   <bean id="GoodServiceConstructor" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="GoodServiceConstructor"/>
       <argument type="org.osgi.test.cases.blueprint.services.TestGoodService">
           <reference interface="org.osgi.test.cases.blueprint.services.TestGoodService"/>
       </argument>
   </bean>

   <bean id="GoodServiceProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="GoodServiceProperty"/>
       <property name="good">
           <reference interface="org.osgi.test.cases.blueprint.services.TestGoodService"/>
       </property>
   </bean>
</blueprint>

