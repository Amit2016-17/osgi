<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This for unregistration of dependencies and listers actions.
    </description>

    <!-- single shared instance of the imported service.  The original backing service will go away.  The timeout
         value shortens the failure time when we try to call this.                             -->
    <reference id="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
    </reference>

    <!-- This gets both a ServiceManager and a reference collection injected -->
   <component id="DependencyChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ReplacementDependencyChecker" init-method="init">
       <constructor-arg value="DependencyChecker"/>
       <property name="one" ref="ServiceOne"/>
       <property name="serviceManager">
           <reference interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
       </property>
   </component>
</components>

