<!-- Locale:5 cases -->
	<bean id="compLocale" factory-method="makeInstance" factory-component="compFactory">
		<argument value="en" type="java.util.Locale"/>
	</bean>

	<bean id="compLocale2" factory-method="makeInstance" factory-component="compFactory">
		<argument value="zh_CN" type="java.util.Locale"/>
	</bean>

	<bean id="compLocale3" factory-method="makeInstance" factory-component="compFactory">
		<argument value="en_US_WIN" type="java.util.Locale"/>
	</bean>

    <bean id="compLocaleNull" factory-method="makeInstance" factory-component="compFactory">
		<argument type="java.util.Locale"><null/></argument>
	</bean>

	<bean id="compLocale_EleValue" factory-method="makeInstance" factory-component="compFactory">
		<constructor-arg><value type="java.util.Locale">en_US</value></argument>
	</bean>

<!-- Class:3 cases -->
	<bean id="compClass" factory-method="makeInstance" factory-component="compFactory">
		<argument value="java.lang.String" type="java.lang.Class"/>
	</bean>

    <bean id="compClassNull" factory-method="makeInstance" factory-component="compFactory">
		<argument type="java.lang.Class"><null/></argument>
	</bean>

	<bean id="compClass_EleValue" factory-method="makeInstance" factory-component="compFactory">
		<constructor-arg><value type="java.lang.Class">org.osgi.test.cases.blueprint.components.injection.ConstructorInjection</value></argument>
	</bean>

<!-- Properties: 4 cases -->
	<bean id="compProperties" factory-method="makeInstance" factory-component="compFactory">
		<argument value="Name=Rex" type="java.util.Properties"/>
	</bean>

	<bean id="compProperties_EleValue" factory-method="makeInstance" factory-component="compFactory">
		<argument type="java.util.Properties">
			<value>
				Name= Rex
				Organization =OSGi Alliance
				Nationality    :    China
				Language: \u4e2d\u6587, English
				Graduated=Shanghai Jiao Tong University
				#key is the word before the first whitespace - "Major"
				Major Computer Science

				!Gender should be a String ""
				Gender

			</value>
		</argument>
	</bean>

	<bean id="compPropertiesEmpty" factory-method="makeInstance" factory-component="compFactory">
		<argument type="java.util.Properties"><value>  </value></argument>
	</bean>

    <bean id="compPropertiesNull" factory-method="makeInstance" factory-component="compFactory">
		<argument type="java.util.Properties"><null/></argument>
	</bean>

</blueprint>