<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

<!-- instance factory -->
    <bean id="compFactory" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionInstanceFactory">
		<!-- collaborators and configuration for this component go here -->
    </bean>

<!-- URL: 3 cases -->
	<bean id="compURL" factory-method="makeInstance" factory-component="compFactory">
		<argument value="http://www.osgi.org" type="java.net.URL"/>
	</bean>

    <bean id="compURLNull" factory-method="makeInstance" factory-component="compFactory">
		<argument type="java.net.URL"><null/></argument>
	</bean>

	<bean id="compURL_EleValue" factory-method="makeInstance" factory-component="compFactory">
		<constructor-arg><value type="java.net.URL">http://www.osgi.org</value></argument>
	</bean>

<!-- Date: 5 cases -->
