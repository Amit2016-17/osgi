<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    default-init-method="init" default-destroy-method="destroy">

    <description>
        This uses auto-export to export all of the classes.
    </description>

    <!-- the node this service export maps into. -->
   <bean id="ServiceAll" class="org.osgi.test.cases.blueprint.services.TestGoodServiceSubclass">
       <argument value="ServiceAll"/>
   </bean>

   <!-- export all of the interfaces -->
   <service id="ServiceAllService" ref="ServiceAll" auto-export="all-classes"/>
</blueprint>

