<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
    default-init-method="init" default-destroy-method="destroy">

    <description>
        This uses auto-export to export all of the classes.
    </description>

    <!-- the node this service export maps into. -->
   <component id="ServiceAll" class="org.osgi.test.cases.blueprint.services.TestGoodServiceSubclass">
       <constructor-arg value="ServiceAll"/>
   </component>

   <!-- export all of the interfaces -->
   <service id="ServiceAllService" ref="ServiceAll" auto-export="all-classes"/>
</components>

