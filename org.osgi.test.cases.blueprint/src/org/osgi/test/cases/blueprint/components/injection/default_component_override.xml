<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
      default-init-method="init" default-destroy-method="destroy" default-lazy-init="false">

    <!-- a few leaf nodes for others to reference.  These are just named components -->
   <component id="bundle" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <constructor-arg value="bundle"/>
   </component>
   <component id="bundleContext" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <constructor-arg value="bundleContext"/>
   </component>
   <component id="moduleContext" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <constructor-arg value="moduleContext"/>
   </component>
   <component id="conversionService" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <constructor-arg value="conversionService"/>
   </component>

   <component id="bundleUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <constructor-arg value="bundleUser"/>
       <property name="componentOne">
           <ref component="bundle" />
       </property>
   </component>

   <component id="bundleContextUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <constructor-arg value="bundleContextUser"/>
       <property name="componentOne">
           <ref component="bundleContext" />
       </property>
   </component>

   <component id="moduleContextUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <constructor-arg value="moduleContextUser"/>
       <property name="componentOne">
           <ref component="moduleContext" />
       </property>
   </component>

   <component id="conversionServiceUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <constructor-arg value="conversionServiceUser"/>
       <property name="componentOne">
           <ref component="conversionServiceUser" />
       </property>
   </component>
</components>


