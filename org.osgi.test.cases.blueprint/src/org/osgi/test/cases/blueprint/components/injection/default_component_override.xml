<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    default-lazy-init="false">

    <!-- a few leaf nodes for others to reference.  These are just named components -->
   <bean id="blueprintBundle" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection"
       init-method="init" destroy-method="destroy">
       <argument value="blueprintBundle"/>
   </bean>
   <bean id="blueprintBundleContext" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection"
       init-method="init" destroy-method="destroy">
       <argument value="blueprintBundleContext"/>
   </bean>
   <bean id="blueprintContainer" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection"
       init-method="init" destroy-method="destroy">
       <argument value="blueprintContainer"/>
   </bean>
   <bean id="blueprintConverter" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection"
       init-method="init" destroy-method="destroy">
       <argument value="blueprintConverter"/>
   </bean>

   <bean id="bundleUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection"
       init-method="init" destroy-method="destroy">
       <argument value="bundleUser"/>
       <property name="componentOne">
           <ref component="blueprintBundle" />
       </property>
   </bean>

   <bean id="bundleContextUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection"
       init-method="init" destroy-method="destroy">
       <argument value="bundleContextUser"/>
       <property name="componentOne">
           <ref component="blueprintBundleContext" />
       </property>
   </bean>

   <bean id="blueprintContainerUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection"
       init-method="init" destroy-method="destroy">
       <argument value="blueprintContainerUser"/>
       <property name="componentOne">
           <ref component="blueprintContainer" />
       </property>
   </bean>

   <bean id="converterUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection"
       init-method="init" destroy-method="destroy">
       <argument value="converterUser"/>
       <property name="componentOne">
           <ref component="blueprintConverter" />
       </property>
   </bean>
</blueprint>


