<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    default-init-method="init" default-destroy-method="destroy" default-lazy-init="false">

    <!-- a few leaf nodes for others to reference.  These are just named components -->
   <bean id="bundle" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <argument value="bundle"/>
   </bean>
   <bean id="bundleContext" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <argument value="bundleContext"/>
   </bean>
   <bean id="moduleContext" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <argument value="moduleContext"/>
   </bean>
   <bean id="conversionService" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <argument value="conversionService"/>
   </bean>

   <bean id="bundleUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <argument value="bundleUser"/>
       <property name="componentOne">
           <ref component="bundle" />
       </property>
   </bean>

   <bean id="bundleContextUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <argument value="bundleContextUser"/>
       <property name="componentOne">
           <ref component="bundleContext" />
       </property>
   </bean>

   <bean id="moduleContextUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <argument value="moduleContextUser"/>
       <property name="componentOne">
           <ref component="moduleContext" />
       </property>
   </bean>

   <bean id="conversionServiceUser" class="org.osgi.test.cases.blueprint.components.injection.ComponentInjection">
       <argument value="conversionServiceUser"/>
       <property name="componentOne">
           <ref component="conversionServiceUser" />
       </property>
   </bean>
</blueprint>


