<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:date="http://www.osgi.org/schema/blueprint/test/date/v1.0.0"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <date:dateformat id="format1" pattern="yyyy.MM.dd G 'at' HH:mm:ss z"/>
    <date:dateformat id="format2" pattern="yyyy-MM-dd HH:mm" lenient="true"/>

   <bean id="checker1" class="org.osgi.test.cases.blueprint.components.namespace.DateChecker">
       <argument value="checker1"/>
       <constructor-arg>
           <bean class="java.text.SimpleDateFormat">
                <argument value="yyyy.MM.dd G 'at' HH:mm:ss z"/>
           </bean>
       </argument>
       <property name="format" ref="format1"/>
   </bean>

   <bean id="checker2" class="org.osgi.test.cases.blueprint.components.namespace.DateChecker">
       <argument value="checker2"/>
       <constructor-arg>
           <bean class="java.text.SimpleDateFormat">
                <argument value="yyyy-MM-dd HH:mm"/>
                <property name="lenient" value="true"/>
           </bean>
       </argument>
       <property name="format" ref="format2"/>
   </bean>

   <bean id="checker3" class="org.osgi.test.cases.blueprint.components.namespace.DateChecker">
       <argument value="checker3"/>
       <constructor-arg>
           <bean class="java.text.SimpleDateFormat">
                <argument value="yyyy-MM-dd HH:mm"/>
                <property name="lenient" value="false"/>
           </bean>
       </argument>
       <property name="format">
           <!-- tests use as an inner component and also tests the boolean type conversion
                when used indirectly -->
           <date:dateformat id="format2" pattern="yyyy-MM-dd HH:mm" lenient="no"/>
       </property>
   </bean>
</blueprint>

