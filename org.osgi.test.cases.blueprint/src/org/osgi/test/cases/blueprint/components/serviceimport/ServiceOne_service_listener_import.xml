<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <description>
        This imports a service reference with an attached listener.  The listener is also an imported service.
    </description>

    <reference id="ServiceOneListener" interface="org.osgi.test.cases.blueprint.services.ServiceOneListenerInterface"/>

    <!-- single shared instance of the imported service -->
    <reference id="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
        <listener bind-method="bind" unbind-method="unbind" ref="ServiceOneListener"/>
    </reference>

   <bean id="ServiceOneProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceOneProperty"/>
       <property name="one" ref="ServiceOne"/>
   </bean>
</blueprint>

