<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <description>
        This is just a simple exported service using a single interface.
    </description>

    <!-- the node this service export maps into. -->
   <bean id="ServiceOne" class="org.osgi.test.cases.blueprint.services.TestGoodServiceSubclass">
       <argument value="ServiceOne"/>
   </bean>

   <!-- simple export using a reference and just one interface. -->
   <service id="ServiceOneService" ref="ServiceOne">
       <interfaces>
            <value>org.osgi.test.cases.blueprint.services.TestServiceOne</value>
            <value>org.osgi.test.cases.blueprint.services.TestServiceTwo</value>
       </interfaces>
       <service-properties>
           <entry key="service.component.name" value="ServiceOneService"/>
       </service-properties>
       <registration-listener
           registration-method="register"
           unregistration-method="unregister">
           <bean class="org.osgi.test.cases.blueprint.components.serviceexport.ServiceOneTwoRegistrationListener">
               <argument value="ServiceOneTwoListener"/>
           </bean>
       </registration-listener>
   </service>
</blueprint>

