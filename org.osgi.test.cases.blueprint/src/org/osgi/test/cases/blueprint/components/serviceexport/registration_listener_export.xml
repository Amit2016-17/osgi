<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    default-init-method="init" default-destroy-method="destroy">

    <description>
        This exports a registration listener object as a service...useful for multiple tests
    </description>


    <bean id="ServiceOneListener" class="org.osgi.test.cases.blueprint.components.serviceexport.ServiceOneRegistrationListener">
        <argument value="ServiceOneRegistrationListener"/>
    </bean>

   <!-- simple export using a reference and just one interface. -->
   <service id="ServiceOneListenerService" ref="ServiceOneListener" interface="org.osgi.test.cases.blueprint.services.ServiceOneRegistrationListenerInterface"/>
</blueprint>

