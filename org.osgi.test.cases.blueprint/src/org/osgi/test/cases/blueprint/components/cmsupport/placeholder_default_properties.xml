<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:osgix="http://www.osgi.org/xmlns/blueprint-compendium/v1.0.0"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
    http://www.osgi.org/xmlns/blueprint-compendium/v1.0.0 http://www.osgi.org/xmlns/blueprint-compendium/v1.0.0/blueprint-compendium.xsd">

    <!-- default config one -->
    <osgix:property-placeholder persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config1" defaults-ref="compDefaultConfig1"/>

    <bean id="compDefaultConfig1" class="org.osgi.test.cases.blueprint.components.cmsupport.DefaultConfigOne"/>

    <bean id="compString1" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjection">
        <property name="string" value="${str_1}"/>
    </bean>

    <!-- default config two -->
    <osgix:property-placeholder persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config2" defaults-ref="compDefaultConfig2" placeholder-prefix="#{" placeholder-suffix="}"/>

    <bean id="compDefaultConfig2" class="org.osgi.test.cases.blueprint.components.cmsupport.DefaultConfigTwo"/>

    <bean id="compString2" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjection">
        <property name="string" value="#{str_2}"/>
    </bean>

    <!-- default config three -->
    <osgix:property-placeholder persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config3" placeholder-prefix="#[" placeholder-suffix="]">
        <default-properties>
            <property name="str_3" value="def"/>
        </default-properties>
    </osgix:property-placeholder>

    <bean id="compString3" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjection">
        <property name="string" value="#[str_3]"/>
    </bean>



</blueprint>