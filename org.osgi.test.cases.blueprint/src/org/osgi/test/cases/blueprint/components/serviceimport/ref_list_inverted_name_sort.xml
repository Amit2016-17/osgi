<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This is a checker for different sorting combinations.
    </description>

    <!-- This is the same, but using an inverted comparison. -->
    <component id="InvertedComparatorChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ReferenceCollectionSortChecker" init-method="init">
        <constructor-arg value="InvertedComparatorChecker"/>
        <property name="serviceManager">
            <reference interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
        </property>
        <property name="bundleContext" ref="bundleContext"/>
        <property name="list">
            <ref-list interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
                <comparator>
                    <component class="org.osgi.test.cases.blueprint.components.serviceimport.InverseNameComparator"/>
                </comparator>
            </ref-list>
        </property>
        <property name="sortOrder">
            <list>
                <value>ServiceOneE</value>
                <value>ServiceOneD</value>
                <value>ServiceOneC</value>
                <value>ServiceOneB</value>
                <value>ServiceOneA</value>
            </list>
        </property>
    </component>
</components>

