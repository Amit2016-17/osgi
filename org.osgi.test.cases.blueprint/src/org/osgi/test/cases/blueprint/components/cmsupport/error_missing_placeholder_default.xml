<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:bpcm="http://www.osgi.org/xmlns/blueprint-cm/v1.0.0">

    <!-- default config one -->
    <bpcm:property-placeholder persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config1" defaults-ref="compDefaultConfig1"/>

    <bean id="compDefaultConfig1" class="org.osgi.test.cases.blueprint.components.cmsupport.DefaultConfigOne"/>

    <bean id="compString1" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjection">
        <description>
            This will be an error because the property name will not be found
        </description>
        <property name="string" value="${str_1xxxxx}"/>
    </bean>

    <!-- default config two -->
    <bpcm:property-placeholder persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config2" defaults-ref="compDefaultConfig2" placeholder-prefix="#{" placeholder-suffix="}"/>

    <bean id="compDefaultConfig2" class="org.osgi.test.cases.blueprint.components.cmsupport.DefaultConfigTwo"/>

    <bean id="compString2" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjection">
        <property name="string" value="#{str_2}"/>
    </bean>

    <!-- default config three -->
    <bpcm:property-placeholder persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config3" placeholder-prefix="#[" placeholder-suffix="]">
        <bpcm:default-properties>
            <bpcm:property name="str_3" value="def"/>
        </bpcm:default-properties>
    </bpcm:property-placeholder>

    <bean id="compString3" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjection">
        <property name="string" value="#[str_3]"/>
    </bean>



</blueprint>
