<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<bean id="compInnerNull" class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
		<argument value="compInnerNull"/>
		<constructor-arg><null/></argument>
	</bean>

    <bean id="compInnerOne" class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
		<argument value="compInnerOne"/>
		<constructor-arg>
			<bean class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
				<argument value="compInnerOne_1"/>
			</bean>
		</argument>
	</bean>

    <bean id="compInnerLazyOuter" class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection" lazy-init="true">
		<argument value="compInnerLazyOuter"/>
		<constructor-arg>
			<bean class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
				<argument value="compInnerLazyOuter_1"/>
			</bean>
		</argument>
	</bean>

    <bean id="compInnerTwo" class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
		<argument value="compInnerTwo"/>
		<constructor-arg>
			<bean class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
				<argument value="compInnerTwo_1"/>
			</bean>
		</argument>
		<constructor-arg>
			<bean class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
				<argument value="compInnerTwo_2"/>
			</bean>
		</argument>
	</bean>

<!-- ignores -->
    <bean id="compInnerIgnoreID" class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
		<argument value="compInnerIgnoreID"/>
		<constructor-arg>
			<bean id="compInnerIgnoreID_1" class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
			</bean>
		</argument>
	</bean>

    <bean id="compInnerIgnoreScope" class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
		<argument value="compInnerIgnoreScope"/>
		<constructor-arg>
			<bean scope="singleton" class="org.osgi.test.cases.blueprint.components.injection.InnerComponentInjection">
			</bean>
		</argument>
	</bean>


</blueprint>