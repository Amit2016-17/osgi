<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
       This is a tests the conversion service via a conversion error.
    </description>

	<type-converters>
		<bean id="customBooleanConverter" class="org.osgi.test.cases.blueprint.components.injection.CustomBooleanConverter"/>
	</type-converters>

    <bean id="ConversionInjection" class="org.osgi.test.cases.blueprint.components.injection.ConversionServiceComponent">
		<argument value="ConversionInjection"/>
		<argument ref="blueprintConverter"/>
        <!-- this will be converted using the converter service -->
        <property name="conversion" value="BAD"/>
	</bean>
</blueprint>

