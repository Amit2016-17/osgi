<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
    default-init-method="init" default-destroy-method="destroy">

    <description>
        This exports a component using all of the class hierarchy classes, but no interfaces.
    </description>

    <!-- the node this service export maps into. -->
   <component id="ServiceClasses" class="org.osgi.test.cases.blueprint.services.TestGoodServiceSubclass">
       <constructor-arg value="ServiceInterfaces"/>
   </component>

   <!-- export all of the interfaces -->
   <service id="ServiceClassesService" ref="ServiceClasses" auto-export="class-hierarchy"/>
</components>

