<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
    default-init-method="init" default-destroy-method="destroy">

    <description>
        This does a shotgun export of all classes used by the bad service.  Useful for
        checking multiple service conflicts.
    </description>

   <!-- this is a "shotgun" export, which is handy for checking conflicts. -->
   <service id="BadServiceService" auto-export="all-classes" ranking="2">
       <!-- the node this service export maps into. -->
      <component class="org.osgi.test.cases.blueprint.services.TestBad">
          <constructor-arg value="ServiceOne"/>
      </component>
      <!-- some service properties for filter tests. -->
      <service-properties>
          <entry key="serviceType" value="Bad"/>
          <entry key="autoExport" value="All"/>
      </service-properties>
   </service>
</components>

