<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:osgix="http://www.osgi.org/xmlns/blueprint/compendium/v1.0.0"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
    http://www.osgi.org/xmlns/blueprint-compendium/v1.0.0 http://www.osgi.org/xmlns/blueprint-compendium/v1.0.0/blueprint-compendium.xsd">

    <description> inject configuration admin properties to component property </description>

    <component id="comp1" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjection">
        <osgix:managed-properties persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config2"/>
    </component>

    <!-- test the config-properties take precedence, property elements act as a default value -->
    <component id="comp2" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjection">
        <osgix:managed-properties persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config2"/>
        <property name="string" value="def"/>
        <property name="boolean" value="false"/>
        <property name="byte" value="1"/>
        <property name="char" value="2"/>
        <property name="int" value="3"/>
        <property name="short" value="4"/>
        <property name="long" value="5"/>
        <property name="double" value="6.0"/>
        <property name="float" value="7.0"/>
    </component>

</components>

