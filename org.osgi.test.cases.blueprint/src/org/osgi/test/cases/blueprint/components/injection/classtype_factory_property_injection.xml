<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

<!-- instance factory -->
    <bean id="compFactory" class="org.osgi.test.cases.blueprint.components.injection.PropertyInjectionInstanceFactory">
		<!-- collaborators and configuration for this component go here -->
    </bean>


<!-- URL: 3 cases -->
	<bean id="compURL" factory-method="makeInstance" factory-component="compFactory">
		<property name="url" value="http://www.osgi.org"/>
	</bean>

    <bean id="compURLNull" factory-method="makeInstance" factory-component="compFactory">
		<property name="url"><null/></property>
	</bean>

	<bean id="compURL_EleValue" factory-method="makeInstance" factory-component="compFactory">
		<property name="url"><value>http://www.osgi.org</value></property>
	</bean>

