<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
       This is a simple test of the conversion service with no type converters installed.
    </description>

    <bean id="ConversionInjection" class="org.osgi.test.cases.blueprint.components.injection.ConversionServiceComponent">
		<argument value="ConversionInjection"/>
		<argument ref="blueprintConverter"/>
        <!-- this will be converted using the converter service -->
        <property name="conversion" value="true"/>
	</bean>
</blueprint>

