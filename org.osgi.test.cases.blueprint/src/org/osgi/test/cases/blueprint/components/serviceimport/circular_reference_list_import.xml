<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This is a checker for basic reference list validation, with a circular reference involved with the listeners
    </description>

    <!-- This gets both a ServiceManager and a reference collection injected -->
   <bean id="NullReferenceChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.NullReferenceList" init-method="init">
       <argument value="NullReferenceChecker"/>
       <property name="serviceManager">
           <reference interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
       </property>
       <property name="list">
           <ref-list interface="org.osgi.test.cases.blueprint.services.TestServiceOne" availability="optional">
               <reference-listener bind-method="bind" unbind-method="unbind" ref="NullReferenceChecker"/>
           </ref-list>
       </property>
   </bean>
</blueprint>

