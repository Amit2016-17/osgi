<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <description>
        This is a reusable config for validating different service registrations.
    </description>


    <!-- single shared instance of the imported service -->
    <reference id="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestGoodService"/>

   <bean class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceOneChecker"/>
       <property name="good" ref="ServiceOne"/>
   </bean>
</blueprint>

