<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="compFactory" class="org.osgi.test.cases.blueprint.components.injection.ConstructorInjectionInstanceFactory">
      <!-- collaborators and configuration for this component go here -->
    </bean>

    <bean id="compEmptyList" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list></list>
        </argument>
    </bean>

    <bean id="compNullList" factory-method="makeInstance" factory-component="compFactory">
        <argument type="java.util.List">
            <null/>
        </argument>
    </bean>

    <bean id="compStringItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list>
                <value>abc</value>
                <value>def</value>
            </list>
        </argument>
    </bean>

    <bean id="compDupItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list>
                <value>abc</value>
                <value>abc</value>
            </list>
        </argument>
    </bean>

    <bean id="compBooleanItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list>
                <value type="java.lang.Boolean">true</value>
                <value type="java.lang.Boolean">false</value>
            </list>
        </argument>
    </bean>

    <bean id="compMixedItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list>
                <value type="java.lang.String">abc</value>
                <value type="java.lang.Boolean">false</value>
                <value type="java.lang.Byte">3</value>
                <value type="java.lang.Character">4</value>
                <value type="java.lang.Integer">5</value>
                <value type="java.lang.Short">6</value>
                <value type="java.lang.Long">7</value>
                <value type="java.lang.Double">8.0</value>
                <value type="java.lang.Float">9.0</value>
                <value type="java.net.URL">http://www.osgi.org</value>
                <value type="java.lang.Class">java.lang.String</value>
                <value type="java.util.Locale">en_US</value>
                <null/>
            </list>
        </argument>
    </bean>

    <bean id="compTypedItems" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list value-type="java.lang.Double">
                <value>0.0</value>
                <value>1.0</value>
            </list>
        </argument>
    </bean>

    <bean id="compTypeOverride" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list value-type="java.lang.Double">
                <value>0.0</value>
                <value>1.0</value>
                <value type="java.lang.Boolean">true</value>
            </list>
        </argument>
    </bean>

    <bean id="compNestedList" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list>
                <list>
                    <value>abc</value>
                    <value>def</value>
                </list>
            </list>
        </argument>
    </bean>

    <bean id="compNestedSet" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list>
                <set>
                    <value>abc</value>
                    <value>def</value>
                </set>
            </list>
        </argument>
    </bean>

    <bean id="compNestedMap" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list>
                <map>
                    <entry key="abc" value="def"/>
                    <entry key="ghi" value="jkl"/>
                </map>
            </list>
        </argument>
    </bean>

    <bean id="compNestedProps" factory-method="makeInstance" factory-component="compFactory">
        <argument>
            <list>
                <props>
                    <prop key="abc">def</prop>
                    <prop key="ghi">jkl</prop>
                </props>
            </list>
        </argument>
    </bean>
</blueprint>

