<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This imports a service reference with a multiple attached listeners
    </description>

    <bean id="ServiceOneTwoListener" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceOneTwoListener">
        <argument value="ServiceOneTwoListener"/>
    </bean>

    <!-- two references sharing one listener -->
    <reference id="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
        <reference-listener bind-method="bind" unbind-method="unbind">
            <ref component-id="ServiceOneTwoListener"/>
        </reference-listener>
    </reference>

    <reference id="ServiceTwo" interface="org.osgi.test.cases.blueprint.services.TestServiceTwo">
        <reference-listener bind-method="bind" unbind-method="unbind">
            <ref component-id="ServiceOneTwoListener"/>
        </reference-listener>
    </reference>

   <bean id="ServiceOneProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceOneProperty"/>
       <property name="one" ref="ServiceOne"/>
       <property name="two" ref="ServiceTwo"/>
   </bean>
</blueprint>

