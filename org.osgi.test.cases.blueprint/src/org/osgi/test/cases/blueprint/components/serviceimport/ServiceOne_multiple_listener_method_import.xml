<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This imports a service reference with a multiple attached listeners
    </description>

    <bean id="ServiceOneTwoListener" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceOneTwoListener">
        <argument value="ServiceOneTwoListener"/>
    </bean>

    <!-- single shared instance of the imported service -->
    <reference id="ServiceOne">
        <interfaces>
             <value>org.osgi.test.cases.blueprint.services.TestServiceOne</value>
             <value>org.osgi.test.cases.blueprint.services.TestServiceTwo</value>
        </interfaces>
        <listener bind-method="bind" unbind-method="unbind">
            <ref component="ServiceOneTwoListener"/>
        </listener>
    </reference>

   <bean id="ServiceOneProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceOneProperty"/>
       <property name="one" ref="ServiceOne"/>
   </bean>
</blueprint>

