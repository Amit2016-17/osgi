<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:osgix="http://www.osgi.org/xmlns/blueprint/compendium/v1.0.0">
    
    <description> inject configuration admin properties to component property </description>
    
    <component id="compStrategyDefault" class="org.osgi.test.cases.blueprint.components.cmsupport.ManagedComponentInjection">
        <osgix:managed-properties persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config2"/>
    </component>
    
    <component id="compStrategyNone" class="org.osgi.test.cases.blueprint.components.cmsupport.ManagedComponentInjection">
        <osgix:managed-properties persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config2" update-strategy="none"/>
    </component>
    
    <component id="compStrategyComponent" class="org.osgi.test.cases.blueprint.components.cmsupport.ManagedComponentInjection">
        <osgix:managed-properties persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config2" update-strategy="component-managed" update-method="makeUpdate"/>
        <constructor-arg value="compStrategyComponent"/>
    </component>
    
    <component id="compStrategyContainer" class="org.osgi.test.cases.blueprint.components.cmsupport.ManagedComponentInjection">
        <osgix:managed-properties persistent-id="org.osgi.test.cases.blueprint.components.cmsupport.config2" update-strategy="container-managed"/>
    </component>
    
    
</components>