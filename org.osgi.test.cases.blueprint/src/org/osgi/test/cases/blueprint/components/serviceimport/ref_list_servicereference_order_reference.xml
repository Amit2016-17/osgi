<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This is a checker for different sorting combinations.
    </description>


    <!-- And now the natural sorting order using the Service Reference. -->
    <component id="ServiceReferenceOrderChecker" class="org.osgi.test.cases.blueprint.components.serviceimport.ReferenceCollectionSortChecker" init-method="init">
        <constructor-arg value="ServiceReferenceOrderChecker"/>
        <property name="serviceManager">
            <reference interface="org.osgi.test.cases.blueprint.services.ServiceManager"/>
        </property>
        <property name="list">
            <ref-list interface="org.osgi.test.cases.blueprint.services.TestServiceOne" ordering-basis="service-reference" member-type="service-reference"/>
        </property>
        <property name="bundleContext" ref="bundleContext"/>
        <property name="useReferences" value="true"/>
        <property name="sortOrder">
            <list>
                <value>ServiceOneA</value>
                <value>ServiceOneB</value>
                <value>ServiceOneC</value>
                <value>ServiceOneD</value>
                <value>ServiceOneE</value>
            </list>
        </property>
    </component>
</components>

