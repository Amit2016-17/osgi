<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:t1="http://www.osgi.org/schema/blueprint/test/test1/v1.0.0"
    xmlns:t2="http://www.osgi.org/schema/blueprint/test/test2/v1.0.0"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!-- Flips on the init-method for the component -->
    <component id="decorate1" class="org.osgi.test.cases.blueprint.components.namespace.NamespaceChecker" t2:init="init">
        <constructor-arg value="decorate1"/>
    </component>

    <!-- generates a property injector -->
    <component id="decorate2" class="org.osgi.test.cases.blueprint.components.namespace.NamespaceChecker">
        <constructor-arg value="decorate1"/>
        <t1:bundle/>
    </component>

    <!-- alternate form of property injector -->
    <component id="decorate3" class="org.osgi.test.cases.blueprint.components.namespace.NamespaceChecker">
        <constructor-arg value="decorate1"/>
        <property name="altBundle">
            <t1:bundleValue/>
        </property>
    </component>

    <!-- single shared instance of the imported service -->
    <reference id="ServiceTwo" interface="org.osgi.test.cases.blueprint.services.TestServiceTwo" availability="optional" t2:copy-component="true"/>

    <component id="ServiceOne" class="org.osgi.test.cases.blueprint.services.TestGoodServiceSubclass">
        <constructor-arg value="ServiceOne"/>
        <t1:copy/>
    </component>

    <!-- simple export using a reference and just one interface. -->
    <service id="ServiceOneService" ref="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne" t2:copy-component="true"/>

    <ref-list id="TestList" interface="org.osgi.test.cases.blueprint.services.TestServiceOne" availability="optional" t2:copy-component="true">
    </ref-list>

    <ref-set id="TestSet" interface="org.osgi.test.cases.blueprint.services.TestServiceOne" availability="optional" t2:copy-component="true">
    </ref-list>

    <!-- single shared instance of the imported service -->
    <reference id="ServiceTwo2" interface="org.osgi.test.cases.blueprint.services.TestServiceTwo" availability="optional">
        <t1:copy/>
    </reference>

    <!-- simple export using a reference and just one interface. -->
    <service id="ServiceOneService2" ref="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
        <t1:copy/>
    </service>

    <ref-list id="TestList2" interface="org.osgi.test.cases.blueprint.services.TestServiceOne" availability="optional">
        <t1:copy/>
    </ref-list>

    <ref-set id="TestSet2" interface="org.osgi.test.cases.blueprint.services.TestServiceOne" availability="optional">
        <t1:copy/>
    </ref-list>
</components>

