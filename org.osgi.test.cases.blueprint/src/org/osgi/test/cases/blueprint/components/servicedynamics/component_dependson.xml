<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This tests an indirect service dependency via depends-on relationship
    </description>

   <!-- This component does nothing other than get created and have a service injected as a property -->
   <bean id="ServiceOneImporter" class="org.osgi.test.cases.blueprint.components.servicedynamics.DependencyService" depends-on="ComponentDependency">
       <argument value="ServiceOneImporter"/>
   </bean>

   <reference id="ComponentDependency" interface="org.osgi.test.cases.blueprint.services.TestServiceOne"/>

   <!-- This service registration should come and go as the dependent service does -->
   <service id="ServiceOneExporter" ref="ServiceOneImporter" interface="org.osgi.test.cases.blueprint.services.TestServiceDynamicsInterface"/>
</blueprint>

