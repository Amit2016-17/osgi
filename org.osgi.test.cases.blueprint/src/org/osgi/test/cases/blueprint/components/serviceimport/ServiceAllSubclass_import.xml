<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <description>
        This is a reusable config for validating different service registrations.
    </description>

    <!-- we import this both as a property and constructor arg -->
   <component id="ServiceTwoSubclassConstructor" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <constructor-arg value="ServiceTwoSubclassConstructor"/>
       <constructor-arg type="org.osgi.test.cases.blueprint.services.TestServiceTwoSubclass">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceTwoClass"/>
       </constructor-arg>
   </component>

   <component id="ServiceTwoSubclassProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <constructor-arg value="ServiceTwoSubclassProperty"/>
       <property name="twoSubclass">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceTwoSubclass"/>
       </property>
   </component>
</components>

