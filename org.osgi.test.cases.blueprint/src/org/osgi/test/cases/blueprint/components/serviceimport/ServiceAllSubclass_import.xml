<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        This is a reusable config for validating different service registrations.
    </description>

    <!-- we import this both as a property and constructor arg -->
   <bean id="ServiceTwoSubclassConstructor" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceTwoSubclassConstructor"/>
       <argument type="org.osgi.test.cases.blueprint.services.TestServiceTwoSubclass">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceTwoClass"/>
       </argument>
   </bean>

   <bean id="ServiceTwoSubclassProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceReferenceChecker">
       <argument value="ServiceTwoSubclassProperty"/>
       <property name="twoSubclass">
           <reference interface="org.osgi.test.cases.blueprint.services.TestServiceTwoSubclass"/>
       </property>
   </bean>
</blueprint>

