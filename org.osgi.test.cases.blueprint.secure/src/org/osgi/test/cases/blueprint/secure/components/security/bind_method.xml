<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <description>
        Tests a service bind method security exception in a registration listener.
    </description>

    <bean id="listener" class="org.osgi.test.cases.blueprint.services.SecurityTestBean"/>

    <!-- single shared instance of the imported service -->
    <reference id="ServiceOne" interface="org.osgi.test.cases.blueprint.services.TestServiceOne">
        <description>Testing descriptions also</description>
        <reference-listener bind-method="bind" ref="listener"/>
    </reference>

   <bean id="ServiceOneProperty" class="org.osgi.test.cases.blueprint.components.serviceimport.ServiceProxyChecker">
       <argument value="ServiceOneProperty"/>
       <property name="one" ref="ServiceOne"/>
   </bean>
</blueprint>

