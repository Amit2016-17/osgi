# Set javac settings from JDT prefs
-include: ${build}/eclipse/jdt.bnd

Export-Package						= ${p}.*, \
	org.osgi.test.cases.blueprint.*
Bundle-Vendor: IBM
Bundle-DocURL: http://www.osgi.org/
Bundle-ContactAddress: info@mail.osgi.org
Bundle-Category: osgi,test


-conditionalpackage					= org.osgi.test.support.*

-includeresource					= \
	www/blueprint_denied.jar=blueprint_denied.jar , \
	www/bean_constructor.jar=bean_constructor.jar , \
	www/bean_instance_factory.jar=bean_instance_factory.jar , \
	www/bean_static_factory.jar=bean_static_factory.jar , \
	www/bean_init_method.jar=bean_init_method.jar , \
	www/bean_destroy_method.jar=bean_destroy_method.jar , \
	www/bind_method.jar=bind_method.jar , \
	www/unbind_method.jar=unbind_method.jar , \
	www/registered_method.jar=registered_method.jar , \
	www/unregistered_method.jar=unregistered_method.jar , \
	www/converter_canConvert.jar=converter_canConvert.jar , \
	www/converter_convert.jar=converter_convert.jar , \
	www/system_bean.jar=system_bean.jar , \
	www/ServiceOne_export.jar=ServiceOne_export.jar, \
	www/ServiceOne_export_denied.jar=ServiceOne_export_denied.jar, \
	www/ServiceOne_import.jar=ServiceOne_import.jar, \
	www/ServiceOne_import_denied.jar=ServiceOne_import_denied.jar

testcases = ${sort;${classes;named;${p}.*;extends;junit.framework.TestCase;concrete}}
Test-Cases							= ${testcases}

-buildpath							= \
    org.osgi.test.support;                  version=project , \
    org.osgi.service.blueprint;             version=project , \
    org.osgi.test.cases.blueprint;          version=project , \
    osgi.core;                              version=4.3.1     , \
    osgi.cmpn;                              version=4.3.1     , \
    ${junit4}

-runbundles							= \
    ${junit4},\
	org.osgi.impl.service.log; version=latest, \
	org.osgi.impl.service.cm;  version=latest, \
	org.osgi.impl.service.event; version=latest, \
    org.osgi.impl.service.blueprint; version=latest

-runproperties = ${runsecureproperties}
