<?xml version="1.0" encoding="UTF-8"?>
<project name="project" default="run"> 
	<target name="run">
		
		<java jar="../org.osgi.impl.framework.jar"
			fork="true"
		>
			<jvmarg line="-Dorg.osgi.test.watchdog=10"/>
			<jvmarg line="-Dorg.osgi.test.seewait=true"/>
			<jvmarg line="-Djava.security.manager"/>
			<jvmarg line="-Djava.security.policy=policy"/>
			<jvmarg line="-Dmail.host=localhost"/>
			<jvmarg line="-Dorg.osgi.service.http.port=8080"/>
			 
			<jvmarg line="-Dorg.osgi.framework.system.packages=javax.xml.parsers,javax.xml.transform,javax.xml.transform.stream,org.xml.sax,org.xml.sax.helpers,javax.crypto,javax.crypto.spec"/>
			<arg line="-init"/>
			<arg line="-istart ../osgi.jar"/>
			<arg line="-istart ../osgi.refimpl.jar"/>
			<arg line="-istart ../org.osgi.tools.console.jar"/>
			<arg line="-istart ../osgi.target.jar"/>
			<arg line="-launch"/>
			
		</java>
	</target>
</project>
