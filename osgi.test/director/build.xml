<?xml version="1.0" encoding="UTF-8"?>
<project name="project" default="runAllTests"> 
	<target name="runAllTests">		
		<java jar="../org.osgi.impl.framework.eclipse.jar"
			fork="true"
		>
			<jvmarg line="-Dorg.osgi.service.http.port=81"/>
			<jvmarg line="-Xverify:none"/>
			<jvmarg line="-Dorg.osgi.framework.system.packages=javax.xml.parsers,javax.xml.transform,javax.xml.transform.stream,org.xml.sax,org.xml.sax.helpers,javax.crypto,javax.crypto.spec"/>
			
			<arg line="-console"/>
			<arg line="init"/>
			<arg line="launch"/>
			<arg line="'install file:../../osgi.released/osgi.jar start'"/>
			<arg line="'install file:../org.osgi.tools.console.jar start'"/>
			<arg line="'install file:../osgi.min.jar start'"/>
			<arg line="'install file:../osgi.director.jar start'"/>
			<arg line="'install file:../osgi.test.jar start'"/>
			
		</java>
	</target>
	<target name="runEmpty">		
		<java jar="../org.osgi.impl.framework.eclipse.jar"
			fork="true"
		>
			<jvmarg line="-Dorg.osgi.service.http.port=81"/>
			<jvmarg line="-Xverify:none"/>
			<jvmarg line="-Dorg.osgi.framework.system.packages=javax.xml.parsers,javax.xml.transform,javax.xml.transform.stream,org.xml.sax,org.xml.sax.helpers,javax.crypto,javax.crypto.spec"/>
			
			<arg line="-console"/>
			<arg line="init"/>
			<arg line="launch"/>
			<arg line="'install file:../../osgi.released/osgi.jar start'"/>
			<arg line="'install file:../org.osgi.tools.console.jar start'"/>
			<arg line="'install file:../osgi.min.jar start'"/>
			<arg line="'install file:../osgi.director.jar start'"/>
			
		</java>
	</target>
</project>
