<descriptor xmlns="http://www.osgi.org/xmlns/app/v1.0.0" xmlns:scr="http://www.osgi.org/xmlns/scr/v1.0.0">
  <application>
    <locale name = "en">
      <name value = "MEG Test Application" />
      <icon value = "/TestIcon.gif" sizex="8" sizey="8" />
    </locale>
    <locale name = "hu" default="true">
      <name value = "MEG Teszt progi" />
      <icon value = "/TestIcon.gif" />
    </locale>
    <version value = "0.1" />
    <vendor  value = "Nokia" />
    <singleton value = "false" />
    <autostart value = "true" />
    <subscribe event="com/nokia/megtest/StartEvent" action="start"/>
    <subscribe event="com/nokia/megtest/StopEvent" action="stop"/>
    <subscribe event="com/nokia/megtest/SuspendEvent" action="suspend"/>
    <subscribe event="com/nokia/megtest/ResumeEvent" action="resume"/>
    <subscribe event="com/nokia/megtest/ListenerEvent" action="handle"/>
    <subscribe event="com/nokia/megtest/EchoEvent" action="handle"/>
    <subscribe event="com/nokia/megtest/LogEvent" action="handle"/>
    <subscribe event="com/nokia/megtest/SubscribeEvent" action="handle"/>
    <subscribe event="com/nokia/megtest/RequestStop" action="handle"/>
    <subscribe event="com/nokia/megtest/RequestSuspend" action="handle"/>
    <required_services value="org.osgi.service.event.EventAdmin"/>
    <required_logical_resource value="org.osgi.service.application"/>
    <required_logical_resource value="org.osgi.service.event"/>
    <scr:component name="TestApplicationComponent2" 
       factory="Meglet-Sample-Nr-2-Version-1.0" autoenable="true">
      <implementation class="com.nokia.test.megletsample2.TestApplication2"/>
      <service>  
        <provide interface="com.nokia.test.megletsample.TestApplication"/>
      </service>      
    </scr:component>
  </application>
</descriptor>
