<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <!-- This converter handles several generic type conversions -->
	<type-converters>
	    <bean id="genericConverter" class="org.osgi.test.cases.blueprint.java5.components.injection.GenericTypeConverter">
                <argument value="genericConverter"/>
                <argument ref="blueprintConverter"/>
    	 </bean>
	</type-converters>

    <!-- Convert int[] into a List<Point>.  This consumes two array entries for each target value -->
    <bean id="GenericListConversion" class="org.osgi.test.cases.blueprint.java5.components.injection.GenericListInjection">
        <property name="pointList">
            <array value-type="int">
                <value>123</value>
                <value>456</value>
                <value>0</value>
                <value>0</value>
            </array>
        </property>
    </bean>

    <!-- Convert List into a Mao<String,Point>.  This consumes three list entries for each target value -->
    <bean id="GenericMapConversion" class="org.osgi.test.cases.blueprint.java5.components.injection.GenericMapInjection">
        <property name="pointMap">
            <list>
                <value>Start</value>
                <value>123</value>
                <value>456</value>
                <value>Finish</value>
                <value>0</value>
                <value>0</value>
            </list>
        </property>
    </bean>

    <!-- Handle mapping of a parameterized type to a matching argument, with argument type validation. -->
    <bean id="GenericConversion" class="org.osgi.test.cases.blueprint.java5.components.injection.GenericPropertyInjection">
        <argument value="GenericConversion"/>
        <property name="booleanHolder">
            <bean class="org.osgi.test.cases.blueprint.java5.components.injection.GenericHolder">
                <argument><value type="java.lang.Boolean">true</value></argument>
            </bean>
        </property>
    </bean>

    <!-- Handle builtin conversion of enum values. -->
    <bean id="EnumConversion" class="org.osgi.test.cases.blueprint.java5.components.injection.GenericPropertyInjection">
        <argument value="EnumConversion" />
        <property name="suit" value="CLUBS"/>
    </bean>
</blueprint>

