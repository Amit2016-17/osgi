<?xml version="1.0" encoding="UTF-8"?>
<project name="project" default="publish">
	<import file="../cnf/build.xml" />

	<!-- 
	The implementation is supplied by Eclipse Equinox.
	-->
	<target name="init" depends="master.init">
		<copy file="${workspace}/licensed/jar/org.eclipse.osgi_3.2.0.jar"
		      tofile="${project}/${project.name}.jar"
		      verbose="${verbose}"
		      preservelastmodified="true" />
		<!-- Set the main class. -->
		<jar destfile="${project}/${project.name}.jar" update="true">
			<manifest>
				<attribute name="Main-Class" value="org.eclipse.osgi.framework.launcher.Launcher" />
			</manifest>
		</jar>
	</target>
</project>
