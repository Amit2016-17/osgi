# Set javac settings from JDT prefs
-include: ${project.workspace}/cnf/eclipse/jdt.bnd

Bundle-Description: CT for the OSGi/CDI integration

Conditional-Package					= org.osgi.test.support.*
Private-Package						=  \
	${p}.junit.*
Import-Package: ${-signaturetest}, *

Include-Resource: \
	tb1.jar, \
	tb2.jar, \
	tb3.jar, \
	tf3.jar, \
	tb4.jar, \
	tb5.jar, \
	tb6.jar, \
	serviceapi.jar,\
	serviceclient.jar,\
	serviceclient.required.jar,\
	serviceclient.manifest.jar,\
	serviceprovider.jar

Test-Cases							= ${testcases}
-signaturetest                      = org.osgi.service.cdi

javac.profile=

-buildpath							= \
	org.osgi.service.cdi;                   version=project, \
	org.osgi.test.support;                  version=project, \
	osgi.core;                              version=6.0, \
	javax.inject;                           version=1.0.0, \
	javax.enterprise.cdi-api;               version=1.2.0, \
	org.apache.geronimo.specs.geronimo-annotation_1.2_spec; version=1.0, \
	${junit}

-runbundles							= \
	org.osgi.impl.bundle.cdi;               version=latest

-runproperties = \
	${runproperties},\
	osgi.console=
