<?xml version="1.0" encoding="UTF-8"?>
<components>

	<!-- unary reference (static/required), NS 1.3.0 -->
	<component
		xmlns="http://www.osgi.org/xmlns/scr/v1.3.0"
		name="org.osgi.test.cases.component.tbf1.StaticUnaryReference"
		immediate="true">
		<implementation
			class="org.osgi.test.cases.component.tbf1.impl.UnaryReferenceImpl"/>
		<service>
			<provide interface="org.osgi.test.cases.component.service.BaseService"/>
		</service>
		<property name="type" value="static"/>
	    <field-reference
	          interface="org.osgi.test.cases.component.service.TestObject"
	          policy="static"
	          cardinality="1..1"
	          field="service"/>
	</component>

	<!-- unary reference (dynamic/optional), NS 1.3.0 -->
	<component
		xmlns="http://www.osgi.org/xmlns/scr/v1.3.0"
		name="org.osgi.test.cases.component.tbf1.DynamicUnaryReference"
		immediate="true">
		<implementation
			class="org.osgi.test.cases.component.tbf1.impl.UnaryReferenceImpl"/>
		<service>
			<provide interface="org.osgi.test.cases.component.service.BaseService"/>
		</service>
		<property name="type" value="dynamic"/>
	    <field-reference
	          interface="org.osgi.test.cases.component.service.TestObject"
	          policy="dynamic"
	          cardinality="0..1"
	          field="service"/>
	</component>

	<!-- unary reference (dynamic/optional) failing, NS 1.3.0 -->
	<component
		xmlns="http://www.osgi.org/xmlns/scr/v1.3.0"
		name="org.osgi.test.cases.component.tbf1.DynamicUnaryReferenceFailed"
		immediate="true">
		<implementation
			class="org.osgi.test.cases.component.tbf1.impl.FailedUnaryReferenceImpl"/>
		<service>
			<provide interface="org.osgi.test.cases.component.service.BaseService"/>
		</service>
		<property name="type" value="failed"/>
	    <field-reference
	          interface="org.osgi.test.cases.component.service.TestObject"
	          policy="dynamic"
	          cardinality="0..1"
	          field="service"/>
	</component>
</components>
