# in order to build with this bnd file, i copied the geronimo servlet spec and annotation spec to the licensed/repo
# this needs to be updated when the RFC 66 RI is in svn
Bundle-Description: OSGi Web Container RFC 66 Compliance Test
Bundle-Version: 4.2.0.${project.build}
Bundle-RequiredExecutionEnvironment = J2SE-1.5
Signature-Packages:  javax.servlet, javax.servlet.http

Private-Package						= org.osgi.test.support.*, \
	${p}.junit.*, \
	${p}.junit.annotation.*, \
	${p}.util.*, \
	${p}.validate.*, \
	${p}.handler.*

Include-Resource					= \
	generated/tw1.war, \
	generated/tw2.war, \
	generated/tw3.war, \
	generated/tw4.war, \
	generated/tw5.war, \
	generated/wmtw1.war, \
	generated/wmtw2.war, \
	generated/wmtw3.war, \
	generated/wmtw4.war, \
	generated/wmtw5.war, \
	generated/wm2tw5.war, \
	generated/wm3tw5.war, \
	util.jar, \
	eventHandler.jar
	
Import-Package = \
	javax.servlet, \
	javax.servlet.http, \
	javax.annotation, \
 	*
 	
Export-Package =\
	org.osgi.test.cases.webcontainer;version=1.0, \
	org.osgi.test.cases.webcontainer.util;version=1.0, \
	javax.annotation; version=1.0, \
	javax.servlet; version=2.5, \
	javax.servlet.http; version=2.5
	
-buildpath							= \
    org.apache.geronimo.specs.geronimo-servlet_2.5_spec;			version=1.2, \
    org.apache.geronimo.specs.geronimo-annotation_1.0_spec;version=1.1.1, \
	ee.j2se;								version=1.4, \
	osgi.core;								version=4.2, \
	org.osgi.test.support;					version=project, \
	org.osgi.service.log;					version=project, \
	${junit}, \
	org.osgi.service.event;                 version=project , \
	org.apache.commons-logging;version=1.0.4

-runbundles						= \
	org.osgi.impl.bundle.servlet;		version=2.1, \
	org.osgi.impl.service.log; 			version=project, \
	org.eclipse.equinox.event; 			version=latest
# TODO replace the above 40 springsource rfc 66 ri with one consolidated jar when it is avail
# TODO add rfc142 impl bundle here if user wants to run some simple rfc 66 + rfc 142 tests
	
-runproperties = report=true, \
	org.osgi.service.webcontainer.hostname=127.0.0.1, \
	org.osgi.service.webcontainer.http.port=8080

Test-Cases						= ${testcases}

	
