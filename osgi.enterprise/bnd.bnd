Bundle-License: Apache-2.0; \
                link="http://www.apache.org/licenses/LICENSE-2.0"; \
                description="Apache License, Version 2.0"
Bundle-Description: \
	OSGi Enterprise Release ${versionmask;=;${build.version}}, \
	Interfaces and Classes for use in compiling bundles.
Bundle-Name: ${-groupid}:${bsn}
-pom: version=${versionmask;===s;${@version}}

-buildrepo: Local
-releaserepo: Release
-releaserepo.publish: ${env;PUBLISH_REPO}
-baseline: *
-fixupmessages.baseline.warning: Baseline mismatch;is:=warning
companion.code = true

Import-Package					: *; resolution:=optional

Export-Package 					: ${replace;${osgi.enterprise.packages};.+;$0\\;-split-package:=first}
-fixupmessages.export: Unused Export-Package instructions

-includeresource 				: ${osgi.enterprise.resources}

Provide-Capability: osgi.unresolvable
Require-Capability: osgi.unresolvable; filter:="(&(must.not.resolve=*)(!(must.not.resolve=*)))"

-dependson 					=  \
	${osgi.enterprise.specs} 

-buildpath 					= \
	${replace;${osgi.enterprise.specs};.+;$0\\;version=project}, \
    osgi.annotation;version=latest, \
    osgi.core;version=latest, \
    org.apache.geronimo.specs.geronimo-servlet_2.5_spec;version=latest, \
    org.eclipse.persistence.jpa_spec;version=latest, \
    org.apache.aries.javax.inject-api;version=0.0.1, \
    org.apache.aries.javax.cdi-api;version=0.0.1, \
    org.apache.geronimo.specs:geronimo-jaxrs_2.0_spec, \
    com.icl.saxon;version=latest
-fixupmessages.jpa_spec: Version for package org\.osgi\.service\.jpa is set to different values

-include : ${build}/eclipse/jdt.bnd, layout.bnd
javadoc.title = Enterprise
