# Set javac settings from JDT prefs
-include: ${build}/eclipse/jdt.bnd

Bundle-Description					: Remote Service Admin secure test cases.
Bundle-Vendor: TIBCO Software Inc.
Bundle-DocURL: http://www.osgi.org/
Bundle-ContactAddress: info@mail.osgi.org
Bundle-Category: osgi,test


Export-Package 					= ${p}.common;version=1.0.0
	
Conditional-Package					= org.osgi.test.support.*
Private-Package						=  \
	${p}.*
	
Bundle-Category: osgi,test

Include-Resource					= \
	tb_exporter.jar=tb_exporter.jar, \
	tb_importer.jar=tb_importer.jar, \
	tb_reader.jar=tb_reader.jar, \
	tb_exporter_noperm.jar=tb_exporter_noperm.jar, \
	tb_importer_noperm.jar=tb_importer_noperm.jar, \
	tb_reader_noperm.jar=tb_reader_noperm.jar
	
Test-Cases							= ${testcases}

-buildpath							= \
    org.osgi.test.support;                  version=project , \
	org.osgi.service.remoteserviceadmin;	version=project	, \
	osgi.core;								version=4.3.1	, \
    osgi.cmpn;           				version=4.2 , \
	ee.minimum; 							version=1.2.1	, \
	${junit}

-runbundles							= \
    org.osgi.impl.service.log;                version=latest, \
    org.osgi.impl.service.cm;                 version=latest, \
    org.osgi.impl.service.event;              version=latest, \
	org.osgi.impl.service.metatype;           version=latest, \
    org.apache.geronimo.specs.geronimo-servlet_2.5_spec; version=latest,\
	org.apache.felix.dependencymanager;       version=latest,\
	org.apache.felix.http.whiteboard;       version=latest,\
	org.apache.felix.http.jetty;       version=latest,\
	org.osgi.impl.service.remoteserviceadmin; version=latest

-runvm = -Xmx512m, -XX:MaxPermSize=350m

-runproperties = ${runsecureproperties}, \
	rsa.ct.timeout=300000,\
	rsa.ct.timeout.factor=3,\
	amdatu.logging.level=4,\
	amdatu.console.level=4,\
	${p}.framework.properties="org.osgi.service.http.port=@@FREE_PORT@@", \
	${p}.system.packages.extra="${junit.package}", \
    ${p}.serverconfig="service.exported.intents.extra,service.exported.configs", \
    service.exported.intents.extra="passByValue", \
    service.exported.configs=".ars", \
	org.osgi.service.http.port=9191,\
    org.osgi.framework.bootdelegation=javax.*,\
    ${p}.bundles="${uniq;${repo;org.osgi.service.event;latest},${repo;org.osgi.impl.service.log;latest},${repo;org.osgi.impl.service.cm;latest},${repo;org.osgi.impl.service.metatype;latest},${repo;org.apache.geronimo.specs.geronimo-servlet_2.5_spec;latest},${repo;org.apache.felix.dependencymanager;latest},${repo;org.apache.felix.http.jetty;latest},${repo;org.apache.felix.http.whiteboard;latest},${repo;org.osgi.impl.service.remoteserviceadmin;latest}}"
