Bundle-Name:                             ${p}.client
Bundle-Version:                          1.0.0
Private-Package:                          ${p}.client

Bundle-Activator: ${p}.client.ColorProviderClientOSGi

# require the ServiceLoader Mediator to opt-in to processing
Require-Capability: \
 osgi.extender;filter:="(osgi.extender=osgi.serviceloader.processor)",\
 osgi.serviceloader; filter:="(&(osgi.serviceloader=${p}.spi.ColorProvider)(provider=CT))"

Include-Resource = \
 {OSGI-INF/permissions.perm=perms/client_noperm.perm}
